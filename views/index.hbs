<div class="search-bar">
  <form class="search-bar-form" action="/restaurants">
    <label for="search">Search</label>
    <input type="text" id="search" value="{{keyword}}" name="search">
    <button type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
    <select class="sort">
      <option class="sort-opt" disabled selected>文章排序</option>
      <option class="sort-opt" value="default">預設</option>
      <option class="sort-opt" value="name-descend">A => Z</option>
      <option class="sort-opt" value="name-ascend">Z => A</option>
      <option class="sort-opt" value="rate-descend">5 => 1</option>
      <option class="sort-opt" value="rate-ascend">1 => 5</option>
    </select>
  </form>
</div>
<div class="restaurants-container">
  {{#each restaurants}}
  <a href="restaurant/{{this.id}}">
    <div class="restaurant">
      <div class="restaurant-img">
        <img src="{{this.image}}">
      </div>
      <div class="restaurant-data">
        <p class="restaurant-name">{{this.name}}</p>
        <p class="restaurant-category">{{this.category}}</p>
        <p class="restaurant-rating">
          <i class="fa-solid fa-star"></i>
          {{this.rating}}
        </p>
      </div>
    </div>
  </a>
  {{/each}}
</div>
<div class="pagination">
  <form action="/restaurants">
    <input type="hidden" name="page" value="{{prev}}">
    <button type="submit">prev</button>
  </form>
  <form action="/restaurants">
    <input type="hidden" name="page" value="{{next}}">
    <button type="submit">next</button>
  </form>
</div>
<span class="current-page">page: {{page}}</span>